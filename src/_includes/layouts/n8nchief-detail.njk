{% extends "layouts/base.njk" %}

{% block content %}
<main class="expertise-detail n8nchief-detail">
  <div class="container">
    <nav class="breadcrumb">
      <a href="/">Home</a>
      <span class="separator">/</span>
      <a href="/n8nchief/">n8n Expertise</a>
      <span class="separator">/</span>
      <span class="current">{{ title }}</span>
    </nav>
    
    <article class="expertise-article">
      <header class="article-header">
        <h1 class="article-title">{{ title }}</h1>
        <div class="article-meta">
          <span class="category">n8n Workflow Expertise</span>
          <span class="reading-time">8 min read</span>
        </div>
      </header>
      
      <div class="article-content">
        {{ content | safe }}
      </div>
      
      <footer class="article-footer">
        <div class="related-topics">
          <h3>Related Workflows</h3>
          <div class="topic-grid">
            {% set related = collections.n8nchief | where("data.tags", tags[0]) | limit(3) %}
            {% for item in related %}
              {% if item.url != page.url %}
              <a href="{{ item.url }}" class="topic-card">
                <h4>{{ item.data.title }}</h4>
                <p>{{ item.data.description | truncate(100) }}</p>
              </a>
              {% endif %}
            {% endfor %}
          </div>
        </div>
        
        <div class="navigation-links">
          {% set prev = collections.n8nchief | getPreviousCollectionItem %}
          {% set next = collections.n8nchief | getNextCollectionItem %}
          
          {% if prev %}
          <a href="{{ prev.url }}" class="nav-link prev">
            <span class="nav-label">Previous</span>
            <span class="nav-title">{{ prev.data.title }}</span>
          </a>
          {% endif %}
          
          {% if next %}
          <a href="{{ next.url }}" class="nav-link next">
            <span class="nav-label">Next</span>
            <span class="nav-title">{{ next.data.title }}</span>
          </a>
          {% endif %}
        </div>
      </footer>
    </article>
    
    <aside class="expertise-sidebar">
      <div class="sidebar-section">
        <h3>Workflow Areas</h3>
        <nav class="sidebar-nav">
          {% for item in collections.n8nchief %}
            {% if item.data.title != "n8n Workflow Expertise" %}
            <a href="{{ item.url }}" class="nav-item {% if item.url == page.url %}active{% endif %}">
              {{ item.data.title }}
            </a>
            {% endif %}
          {% endfor %}
        </nav>
      </div>
      
      <div class="sidebar-section">
        <h3>Integration Stats</h3>
        <div class="stats-grid">
          <div class="stat-item">
            <span class="stat-number">150+</span>
            <span class="stat-label">Workflows</span>
          </div>
          <div class="stat-item">
            <span class="stat-number">200+</span>
            <span class="stat-label">APIs</span>
          </div>
          <div class="stat-item">
            <span class="stat-number">25+</span>
            <span class="stat-label">Custom Nodes</span>
          </div>
        </div>
      </div>
      
      <div class="sidebar-section">
        <h3>Technologies</h3>
        <div class="tech-cloud">
          <span class="tech-tag">n8n</span>
          <span class="tech-tag">Node-RED</span>
          <span class="tech-tag">REST APIs</span>
          <span class="tech-tag">Webhooks</span>
          <span class="tech-tag">PostgreSQL</span>
          <span class="tech-tag">MongoDB</span>
          <span class="tech-tag">AWS</span>
          <span class="tech-tag">Docker</span>
        </div>
      </div>
    </aside>
  </div>
</main>
{% endblock %}