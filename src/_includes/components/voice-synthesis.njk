<div class="voice-synthesis-demo">
  <div class="voice-header">
    <button id="speak-btn" class="btn btn-primary">
      <i class="icon-play"></i> Speak
    </button>
    <div class="voice-status">
      <span id="voice-status">Ready</span>
    </div>
  </div>
  
  <div class="voice-content">
    <div class="voice-text-section">
      <label for="voice-text">Text to Speak:</label>
      <textarea id="voice-text" placeholder="Type your message here..." rows="2"></textarea>
    </div>
    
    <div class="voice-controls-section">
      <div class="voice-options">
        <div class="option-group">
          <label for="voice-select">Voice:</label>
          <select id="voice-select">
            <option value="">Default</option>
          </select>
        </div>
        
        <div class="sliders">
          <div class="slider-group">
            <label for="voice-rate">Rate:</label>
            <div class="slider-container">
              <input type="range" id="voice-rate" min="0.5" max="2" value="1" step="0.1">
              <span id="rate-value">1</span>
            </div>
          </div>
          
          <div class="slider-group">
            <label for="voice-pitch">Pitch:</label>
            <div class="slider-container">
              <input type="range" id="voice-pitch" min="0.5" max="2" value="1" step="0.1">
                <span id="pitch-value">1</span>
            </div>
          </div>
        </div>
      </div>
      
      <div class="voice-actions">
        <button id="pause-btn" class="btn btn-secondary">
          <i class="icon-pause"></i>
        </button>
        <button id="stop-btn" class="btn btn-secondary">
          <i class="icon-stop"></i>
        </button>
        <button id="download-btn" class="btn btn-secondary">
          <i class="icon-download"></i>
        </button>
      </div>
    </div>
  </div>
  
  <div class="voice-visualization">
    <canvas id="voice-visualizer"></canvas>
  </div>
</div>