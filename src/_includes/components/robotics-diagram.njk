<div class="diagram-container robotics-diagram{% if class %} {{ class }}{% endif %}">
  {% if title %}
  <h3 class="diagram-title">{{ title }}</h3>
  {% endif %}
  {% if description %}
  <p class="diagram-description">{{ description }}</p>
  {% endif %}
  <div class="robotics-diagram-content" id="robotics-{{ id | default('diagram') }}">
    {{ content | safe }}
  </div>
</div>