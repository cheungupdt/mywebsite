    <h3 class="card-title">{{ title }}</h3>
    <p class="card-description">{{ description }}</p>
    <div class="card-impact">
      <span class="impact-label">Impact:</span>
      <span class="impact-value {{ impact | lower }}">{{ impact }}</span>
    </div>
