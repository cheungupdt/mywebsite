<div class="speaking-card{% if class %} {{ class }}{% endif %}">
  <div class="speaking-card-image">
    {% if engagement.data.image %}
    <img src="{{ engagement.data.image }}" alt="{{ engagement.data.title }}" loading="lazy">
    {% else %}
    <img src="https://placehold.co/400x250/3366ff/ffffff?text={{ engagement.data.title | replace(' ', '+') }}" alt="{{ engagement.data.title }}" loading="lazy">
    {% endif %}
  </div>
  <div class="speaking-card-content">
    <h3 class="speaking-card-title">{{ engagement.data.title }}</h3>
    {% if engagement.data.date %}
    <p class="speaking-card-date">{{ engagement.data.date | readableDate }}</p>
    {% endif %}
    {% if engagement.data.event %}
    <p class="speaking-card-event">{{ engagement.data.event }}</p>
    {% endif %}
    {% if engagement.data.location %}
    <p class="speaking-card-location">{{ engagement.data.location }}</p>
    {% endif %}
    <p class="speaking-card-description">{{ engagement.data.description }}</p>
    <a href="{{ engagement.url }}" class="speaking-card-link">View Details</a>
  </div>
</div>